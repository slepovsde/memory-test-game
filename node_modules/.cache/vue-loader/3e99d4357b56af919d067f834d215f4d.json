NONE,\n    }\n  },\n  setup(props) {\n    const getBoardItemClasses = computed(() => {\n      let classes = 'item ';\n      \n      if (props.field.value === FIELD.FILLED && props.gameStatus === GAME_STATUS.PREVIEW\n        || props.field.clicked) {\n        classes += 'active';\n      }\n      \n      return classes;\n    });\n    \n    return {\n      getBoardItemClasses\n    }\n  },\n  methods: {\n    select(id) {\n      if (this.gameStatus === GAME_STATUS.STARTED) {\n        this.$emit('selectField', id);\n      }\n    }\n  }\n}\n</script>\n\n<style scoped>\n  .item {\n    position: relative;\n    width: 50px;\n    height: 50px;\n    background: #ccc;\n    margin: 5px;\n    display: inline-block;\n    cursor: pointer;\n    \n    transition: .4s;\n    transform-style: preserve-3d;\n  }\n  \n  .item.active {\n    background: #42b983cc;\n    transform: rotateX(180deg);\n  }\n</style>"]}]}